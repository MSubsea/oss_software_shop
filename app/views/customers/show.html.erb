<div class="container mt-5">
  <h1><%= @customer.name %></h1>
  <%= link_to "Back to Customers index", customers_path, class: "btn btn-primary" %>
  <% if policy(Software).create? %>
    <%= link_to "Add new software", new_software_path, class: "btn btn-primary" %>
  <% end %>
  <%= render "foot", customer: @customer %>
</div>
<hr>
<div class="container">
  <div class="row">
    <% @customer.softwares.each do |software| %>
      <div class="col">
        <div class="custcontainer">
          <div class="card">
            <div class="imgBx">
              <% if software.photo.key.present? %>
                <%= cl_image_tag software.photo.key, class: "w-4 mh-4" %>
              <% end %>
            </div>
            <div class="contentBx">
              <h2><%=software.title%></h2>
              <div class="size">
                <h3><%= software.description %></h3>
              </div>
              <div class="size">
                <%= link_to "OPEN", software_path(software), class: "btn btn-flat mx-2 p-2" %>
                <% if policy(Release).new? %>
                  <%= link_to "ADD NEW RELEASE", new_software_release_path(software), class: "btn btn-flat mx-2 p-2" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

    <% end %>
    </div>
  </div>
</div>
<br>
