<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 col-md-4">
      <h2>Welcome Back</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs background-color: #d5f4e6">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" },
                        placeholder: "Enter your email" %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" },
                        placeholder: "Enter your new-password" %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Login",  class: "btn btn-primary" %>
          </div>
        <% end %>
        <div class="d-flex">
          <div class="mt-5 pt-2 pb-2 pr-2">
            <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-secondary" %><br />
          </div>
          <div class="mt-5 p-2">
            <%= link_to "Reset Password", new_password_path(resource_name), class: "btn btn-secondary" %><br />
          </div>
        </div>
    </div>
  </div>
</div>
