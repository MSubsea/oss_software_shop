<div class="row mt-3"></div>
<div class="container mt-5" style="width: 25rem">
  <%= simple_form_for(@user) do |f| %>
    <%= f.input :email %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :role, collection: User.roles.keys %>
    <%= f.submit class: "btn btn-secondary" %>
  <% end %>
</div>
